{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "useDefineForClassFields": false,

    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  }
}
